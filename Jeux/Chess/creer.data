{
    "_parentDatas": ["twoPlayer", "turnBased"],

    "Game": {
        "name": "Chess",
        "description": "The traditional 8x8 chess board with pieces.",

        "attributes": {
            "pieces": {
                "type": {
                    "name": "list",
                    "valueType": "Piece"
                },
                "description": "All the uncaptured pieces in the game."
            },
            "moves": {
                "type": {
                    "name": "list",
                    "valueType": "Move"
                },
                "description": " The list of Moves that have occured, in order."
            },
            "turnsToDraw": {
                "type": "int",
                "description": "How many turns until the game ends because no pawn has moved and no piece has been taken."
            }
        }
    },

    "Piece": {
        "description": "A chess piece",
        "attributes": {
            "owner": {
                "type": "Player",
                "description": "The player that controls this chess Piece."
            },
            "rank": {
                "type": "string",
                "description": "The rank (x) coordinate of the checker represented as a letter [a-h]."
            },
            "file": {
                "type": "int",
                "description": "The file (y) coordinate of the checker represented as a number [1-8]."
            },
            "type": {
                "type": "string",
                "description": "The type of chess piece this is, either: 'King', 'Queen', 'Knight', 'Rook', 'Bishop', or 'Pawn'."
            },
            "captured": {
                "type": "boolean",
                "description": "When the piece has been captured (removed from the board) this is true. Otherwise false."
            },
            "hasMoved": {
                "type": "boolean",
                "description": "If the piece has moved from its starting position.",
                "arenaInterest": "sum"
            }
        },
        "functions": {
            "move": {
                "description": "Moves the piece from its current location to the given rank and file.",
                "altersState": true,
                "arguments": [
                    {
                        "name": "rank",
                        "type": "string",
                        "description": "The rank (x) coordinate to move to. Must be [a-h]."
                    },
                    {
                        "name": "file",
                        "type": "int",
                        "description": "The file (y) coordinate to move to. Must be [1-8]."
                    },
                    {
                        "name": "promotionType",
                        "type": "string",
                        "default": "",
                        "description": "If this is a Pawn moving to the end of the board then this parameter is what to promote it to."
                    }
                ],
                "returns": {
                    "type": "Move",
                    "description": "The Move you did if successful, otherwise null if invalid. In addition if your move was invalid you will lose."
                }
            }
        }
    },

    "Move": {
        "description": "Contains all details about a Piece's move in the game.",
        "attributes": {
            "san": {
                "type": "string",
                "description": "The standard algebraic notation (SAN) representation of the move."
            },
            "piece": {
                "type": "Piece",
                "description": "The Piece that was moved."
            },
            "fromRank": {
                "type": "string",
                "description": "The rank the Piece moved from."
            },
            "fromFile": {
                "type": "int",
                "description": "The file the Piece moved from."
            },
            "toRank": {
                "type": "string",
                "description": "The rank the Piece moved to."
            },
            "toFile": {
                "type": "int",
                "description": "The file the Piece moved to."
            },
            "captured": {
                "type": "Piece",
                "description": "The Piece captured by this Move, null if no capture."
            },
            "promotion": {
                "type": "string",
                "description": "The Piece type this Move's piece was promoted to from a Pawn, empty string if no promotion occured."
            }
        }
    },

    "Player": {
        "attributes": {
            "pieces": {
                "type": {
                    "name": "list",
                    "valueType": "Piece"
                },
                "description": "All the unpcaptured chess pieces owned by this player."
            },
            "madeMove": {
                "type": "boolean",
                "description": "If the Player has made their move for the turn. true means they can no longer move a piece this turn."
            },
            "fileDirection": {
                "type": "int",
                "description": "The direction your checkers must go along the file (y) axis until they reach the other side."
            },
            "color": {
                "type": "string",
                "description": "The color (side) of this player. Either 'White' or 'Black', with the 'White' player having the first move."
            },
            "inCheck": {
                "type": "boolean",
                "description": "true if this player is currently in check, and must move out of check."
            }
        }
    }
}